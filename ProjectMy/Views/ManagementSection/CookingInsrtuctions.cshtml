
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/styles/menuitems.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/customscripts/myscript.js"></script>
    <title>Cooking Instructions</title>
    <style>
    </style>
</head>
<body style="background-color: darkblue;">
    <div class="row" style="text-align:center;color:white">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <h3>
                Cooking and Other Instructions
            </h3>
        </div>
    </div>
    <div class="row mainDiv">
        <div class="col-lg-8" id="itemsArea">
            <div class="row">
                @*@foreach (var item in Model)
                {
                    <div class="col-md-4 cusotomCol"><button class="singleSizeitem" style="background-color:aqua;color:black">@item.Title</button><input type="hidden" value="" /></div>
                }*@
                <div class="col-md-4 cusotomCol"><button class="singleSizeitem"></button><input type="hidden" value="2" /></div>
                <div class="col-md-4 cusotomCol"><button class="singleSizeitem"></button><input type="hidden" value="3" /></div>
                <div class="col-md-4 cusotomCol"><button class="singleSizeitem"></button><input type="hidden" value="4" /></div>
                <div class="col-md-4 cusotomCol"><button class="singleSizeitem"></button><input type="hidden" value="3" /></div>
                <div class="col-md-4 cusotomCol"><button class="singleSizeitem"></button><input type="hidden" value="4" /></div>
                <div class="col-md-4 cusotomCol"><button class="singleSizeitem"></button><input type="hidden" value="4" /></div>

            </div>
        </div>
        <div class="formArea col-lg-4" style="height: 432px;">
            <div class="title"></div>
            
            <div class="row" style="margin-top:22px !important;">
                <div class="col-md-2">
                    <label>Text</label>
                </div>
                <div class="col-md-10">
                    <input type="text" id="text" style="width: 84%;" />
                </div>
            </div>
            <div class="row" style="margin-top: 10px !important;margin-bottom: 10px !important;">
                <div class="col-md-2">
                    <label>Price</label>
                </div>
                <div class="col-md-10">
                    <textarea id="toppings"></textarea>
                </div>
            </div>

            <fieldset>
                <legend>Fonts</legend>
                <div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="btnsWrapper"><b>Size</b>(<span id="sizecount">5</span>)</div>
                            <div>
                                <div><button class="btn btn-success customBtn" value="">+</button></div>
                                <div><button class="btn btn-danger customBtn" value="">-</button></div>
                            </div>
                        </div>
                        <div class="col-md-7">
                            <div>
                                <select id="fontstyle">
                                    <option value="Times-New-Roman">Times New Roman</option>
                                    <option value="Verdana">Verdana</option>
                                    <option value="Comic-Sans-MS">Comic Sans MS</option>
                                    <option value="WildWest">WildWest</option>
                                    <option value="Bedrock">Bedrock</option>
                                    <option value="Arial"> Arial</option>
                                    <option value="Courier"> Courier </option>
                                    <option value="Tahoma"> Tahoma</option>
                                    <option value="Times New Roman">Times New Roman</option>
                                    <option value="sans-serif">sans-serif</option>
                                </select><br />
                            </div>
                            <div class="row">
                                <div class="col-md-4"><input type="checkbox" id="isBold" /><span>Bold</span></div>
                                <div class="col-md-4"><input type="checkbox" id="isitalic" /><span>italic</span> </div>
                            </div>
                        </div>
                    </div>
                    <div class="row rowcustom">
                        <div class="col-md-5"><label>Text color</label> </div>
                        <div class="col-md-6">
                            <input id="textcolor" type="color" class="colorfields" />
                        </div>
                        <div class="col-md-1">

                        </div>
                    </div>
                    <div class="row rowcustom">
                        <div class="col-md-5"><label>Button color</label> </div>
                        <div class="col-md-6">
                            <input id="btncolor" type="color" class="colorfields" />
                        </div>
                        <div class="col-md-1">
                        </div>
                    </div>
                   
                </div>

            </fieldset>

            <fieldset>
                <legend>Menu Buttons</legend>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <button class="menuBtn" id="addItem">Add Item</button>
                    </div>
                    <div class="col-md-4">
                        <button class="menuBtn" id="deleteItem">Delete Item</button>
                    </div>
                    <div class="col-md-2"></div>
                </div>
            </fieldset>
        </div>
    </div>
    <footer>
        <div class="row">
            <div class="col-sm-7 col-md-7"></div>
            <div class="col-sm-2 col-md-2 "> <button class="btn customBttn1 redBg" onclick="location.href='@Url.Action("MenuItem", "ManagementSection")'">Back</button></div>
        
                <div class="col-sm-2 col-md-2 "> <button class="btn customBttn1 greenBg" onclick="location.href='@Url.Action("#", "#")'">Save & Exit</button></div>
        </div>

    </footer>

</body>

</html>
<style>
    footer {
        position: fixed;
        bottom: 0;
        width: 100%;
    }
    
</style>
