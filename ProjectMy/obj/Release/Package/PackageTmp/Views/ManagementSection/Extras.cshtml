
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/styles/menuitems.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/customscripts/myscript.js"></script>
    <title>Extras</title>
    <style>
        .formArea {
            height: 425px !important;
        }
    </style>
</head>
<body style="background-color: darkblue;">
    <div class="row" style="color:white;font-size:17px;font-weight:bold">
        <div class="col-md-4"></div>
        <div class="col-md-4" style="text-align:center;"> Extras </div>
        <div class="col-md-4"></div>


    </div>
    <div class="row mainDiv">
        <div class="col-lg-8 col-sm-8 col-md-8" id="ExtraitemsArea">
            @{
                Html.RenderAction("CategoryExtras");
            }
        </div>
        <div class="formArea col-sm-4 col-md-4 col-lg-4">
            <div class="title">Pizza</div>

            <div class="row" style="margin:2px !important; margin-top:100px !important;margin-bottom:100px !important;">
                <div class="col-md-2">
                    <label>Text</label>
                </div>
                <div class="col-md-10">
                    <input type="text" id="text" style="width: 84%;" />
                </div>
            </div>
            <div class="row" style="margin:2px !important;">
            </div>


            <fieldset>
                <legend>Menu Buttons</legend>
                <div class="row">
                    
                    <div class="col-md-4">
                        <button class="menuBtn btn-success" id="addExtraItem">Add Item</button>
                    </div>
                    <div class="col-md-4">
                        <button class="menuBtn btn-danger" id="deleteExtrasItem">Delete Item</button>
                    </div>
                    <div class="col-md-4">
                        <button class="menuBtn btn-info" id="EditExtrasItem">Update Item</button>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>

    <div class="row " style="padding-top:0px !important;padding-bottom:1px !important;margin-left:2px;margin-right:2px;margin-top:0px !important; background-color:antiquewhite;overflow-x:auto">
        @{
            Html.RenderAction("CategoriesForExtras");
        }
    </div>
    <footer>
        <div class="row">
            <div class="col-sm-9 col-md-9"></div>
            <div class="col-sm-2 col-md-2 "> <button class="btn customBttn1 redBg" onclick="location.href='@Url.Action("MenuItem", "ManagementSection")'">Back</button></div>
        </div>

    </footer>
</body>

</html>
<style>
    footer {
        position: fixed;
        bottom: 0;
        width: 100%;
    }
</style>
<script>
    $(document).on("click", ".Extraitem", function () {
        $('.Extraitem').removeClass('selectedTopping');
        $(this).addClass("selectedTopping");
        var text = $(".selectedTopping").text();
        $('#text').val(text)
    });
</script>