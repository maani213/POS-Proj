
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/styles/menuitems.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/customscripts/myscript.js"></script>
    <title>Sizes</title>
    <style>
    </style>
</head>
<body style="background-color: darkblue;">
    <div class="row mainDiv">
        <div class="col-lg-8" id="itemsArea">
            @{
                Html.RenderAction("GetCategorySizes");
            }
        </div>
        <div class="formArea col-lg-4" style="height: 437px !important;">
            <div class="title">Pizza</div>

            <div class="row" style="margin-top:22px !important;">
                <div class="col-md-2">
                    <label>Text</label>
                </div>
                <div class="col-md-10">
                    <input type="text" id="text" style="width: 84%;" />
                </div>
            </div>
            <div class="row" style="margin:2px !important;">

            </div>
            <fieldset style="margin-top: 73px !important;">
                <legend>Fonts</legend>
                <div>
                    <div class="row">
                        <div class="col-md-5">

                        </div>
                        <div class="col-md-7">
                            <div>
                                <select id="fontstyle">
                                    <option value="Times-New-Roman">Times New Roman</option>
                                    <option value="Verdana">Verdana</option>
                                    <option value="Comic-Sans-MS">Comic Sans MS</option>
                                    <option value="WildWest">WildWest</option>
                                    <option value="Bedrock">Bedrock</option>
                                    <option value="Arial"> Arial</option>
                                    <option value="Courier"> Courier </option>
                                    <option value="Tahoma"> Tahoma</option>
                                    <option value="Times New Roman">Times New Roman</option>
                                    <option value="sans-serif">sans-serif</option>
                                </select><br />
                            </div>
                        </div>
                    </div>
                    <div class="row rowcustom">
                        <div class="col-md-5"><label>Text color</label> </div>
                        <div class="col-md-6">
                            <input id="textcolor" />
                        </div>
                        <div class="col-md-1">

                        </div>
                    </div>
                    <div class="row rowcustom">
                        <div class="col-md-5"><label>Button color</label> </div>
                        <div class="col-md-6">
                            <input id="btncolor" />
                        </div>
                        <div class="col-md-1">
                        </div>
                    </div>
                    <div class="row rowcustom">
                        <div class="col-md-1"></div>
                        <div class="col-md-1"></div>
                    </div>
                </div>

            </fieldset>
            <fieldset>
                <legend></legend>
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-4">
                        <button class="menuBtn" id="addSize">Add Size</button>
                    </div>
                    <div class="col-md-4">
                        <button class="menuBtn" id="deleteSize">Delete Size</button>
                    </div>
                    <div class="col-md-2"></div>
                </div>
            </fieldset>

        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            @{ Html.RenderAction("GetSizeCategories"); }
        </div>

        <div class="col-sm-4">
            <div class="row">

            </div>
        </div>
    </div>


</body>

</html>
